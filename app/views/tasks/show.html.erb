<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><%= @task.title %></h4>
    </div>

    <div class="card-body">
      <p><strong>Status:</strong>
        <% if @task.status.present? %>
        <span class="badge bg-<%= @task.status == "concluida" ? "success" : "secondary" %>">
          <%= @task.status.capitalize.tr('_', ' ') %>
        </span>
        <% else %>
          <span class="text-muted">Não definido</span>
        <% end %>

      <p><strong>Descrição:</strong></p>
      <p><%= @task.description.presence || "Sem descrição." %></p>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to 'Editar', edit_task_path(@task), class: 'btn btn-warning' %>
        <%= link_to 'Voltar', tasks_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
