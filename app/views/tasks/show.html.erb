<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0"><%= @task.title %></h4>
    </div>

    <div class="card-body">
      <p><strong>Status:</strong> <span class="badge bg-<%= @task.status == "concluída" ? "success" : "secondary" %>"><%= @task.status.capitalize %></span></p>

      <p><strong>Descrição:</strong></p>
      <p><%= @task.description.presence || "Sem descrição." %></p>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to 'Editar', edit_task_path(@task), class: 'btn btn-warning' %>
        <%= link_to 'Voltar', tasks_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
