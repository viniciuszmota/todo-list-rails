<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h4>Entrar na sua conta</h4>
        </div>
        <div class="card-body">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="mb-3">
              <%= f.label :email, "E-mail", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Digite seu e-mail", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Senha", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Digite sua senha", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Lembrar de mim", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Entrar", class: "btn btn-primary" %>
            </div>

          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
