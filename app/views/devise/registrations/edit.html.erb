<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Editar Conta</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "card p-4 shadow" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-info">
            Aguardando confirmação de: <strong><%= resource.unconfirmed_email %></strong>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, "Nova Senha", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Deixe em branco para não alterar" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">
              Mínimo de <%= @minimum_password_length %> caracteres
            </small>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirmação da Nova Senha", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, "Senha Atual", class: "form-label" %>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", placeholder: "Necessária para confirmar as alterações" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Atualizar Conta", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-4 text-center">
        <h5>Deseja cancelar sua conta?</h5>
        <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja cancelar sua conta?" }, method: :delete, class: "btn btn-outline-danger mt-2" %>
      </div>

      <div class="mt-3 text-center">
        <%= link_to "Voltar", root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
